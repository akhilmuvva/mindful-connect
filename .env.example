# OpenAI Configuration
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Firebase Configuration
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (Service Account)
FIREBASE_ADMIN_CREDENTIALS=./serviceAccountKey.json

# Encryption
AES_ENCRYPTION_KEY=your_32_byte_encryption_key_1234567890ab
AES_IV_KEY=your_16_byte_iv_key_123456

# Sentry Configuration
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/1234567
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Wearable APIs (Optional)
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret
FITBIT_REDIRECT_URI=http://localhost:8501/callback/fitbit
APPLE_HEALTH_API_KEY=your_apple_health_key

# Application Settings
APP_ENV=development
APP_NAME=Mindful Connect
APP_VERSION=1.0.0
SECRET_KEY=your_secret_key_for_jwt_minimum_32_characters_long
LOG_LEVEL=INFO
DEBUG=True

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Database Settings
FIRESTORE_COLLECTION_USERS=users
FIRESTORE_COLLECTION_MOODS=mood_entries
FIRESTORE_COLLECTION_INSIGHTS=insights
FIRESTORE_COLLECTION_PROMPTS=daily_prompts
FIRESTORE_COLLECTION_SESSIONS=chat_sessions

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Notification Settings
ENABLE_NOTIFICATIONS=True
NOTIFICATION_TIME_DEFAULT=09:00
NOTIFICATION_TIMEZONE=UTC

# ML Model Settings
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
MOOD_PREDICTION_LOOKBACK_DAYS=30
MOOD_PREDICTION_FORECAST_DAYS=7

# Cache Settings
CACHE_TTL_SECONDS=3600
ENABLE_REDIS_CACHE=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Privacy & Compliance
ENABLE_GDPR_MODE=True
ENABLE_HIPAA_MODE=True
DATA_RETENTION_DAYS=365
ANONYMIZE_DATA=True

# Feature Flags
ENABLE_WEARABLE_INTEGRATION=True
ENABLE_CHAT_THERAPY=True
ENABLE_MOOD_PREDICTION=True
ENABLE_SOCIAL_LOGIN=True

# API Timeouts (seconds)
API_TIMEOUT=30
OPENAI_TIMEOUT=60

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME=dark
